{
  "common": {
    "manifest_version": 2,
    "name": "Misakey",
    "version": "0.5.4",
    "author": "Misakey",
    "description": "Visualiser et bloquer les requêtes vers des sites externes de tracking non nécessaires à la navigation.",

    "icons": {
      "48": "ico/favicon-48x48.png"
    },

    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "tabs",
      "storage",
      "http://*/*",
      "https://*/*"
    ],

    "background": {
      "scripts": [
        "polyfill/browser-polyfill.js",
        "background.bundle.js"
      ]
    },

    "content_scripts": [
      {
        "match_about_blank": true,
        "all_frames": true,
        "js": [
          "polyfill/browser-polyfill.js",
          "content_script.bundle.js"
        ],
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "run_at": "document_start"
      }
    ],

    "browser_action": {
      "default_icon": "ico/favicon-32x32.png",
      "default_title": "Misakey",
      "default_popup": "index.html"
    }
  },
  "firefox_specific": {
    "browser_specific_settings": {
      "gecko": {
        "id": "addon@misakey.com",
        "strict_min_version": "57.0"
      }
    }
  }
}